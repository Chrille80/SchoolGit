@{
	Layout = null;
}
<div ng-controller="SelectGameConstroller">
	<h3>Välj kategori:</h3>

	<button ng-click="startGame('Slumpat', 15)" class="btn btn-primary btn-lg btn-block">Slumpat</button>
	<button ng-repeat="item in game.gameModes" ng-click="startGame(item.name,5)" class="btn btn-primary btn-lg btn-block">{{item.name}}</button>
	<button ng-click="showHighscores()" class="btn btn-primary btn-lg btn-block">Rekord</button>

</div>
