@{
    Layout = null;
}

@{
    ViewBag.Title = "SentenceQuestion";
}

<h2>SentenceQuestion</h2>

<div ng-app="app" ng-controller="SentenceQuestionController">
    <br />
	{{ initialSentence }}

    <br /><br /><br />
    Bygg en korrekt mening av orden ovan:
    <input type="text" ng-model="wordAttemptOne" />
    <input type="text" ng-model="wordAttemptTwo" />
    <input type="text" ng-model="wordAttemptThree" />
    <input type="text" ng-model="wordAttemptFour" />
    <input type="text" ng-model="wordAttemptFive" />
    
    <br />
    <input type="submit" value="Kontrollera mening" ng-click="CheckSentence()" />
    
    <br /><br />
    <p ng-show="answerAttempted">{{answerInformation}}</p>

    <br /><br />
    <input ng-show="answerAttempted" type="submit" value="Gå vidare" ng-click="completeLevel(scoreToSend)" />
</div>